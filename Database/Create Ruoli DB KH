CREATE ROLE COMMENT CREATOR;
GRANT CONNECT TO COMMENTS;
GRANT SELECT,INSERT,DELETE,UPDATE ON COMMENTS;

CREATE ROLE COMMENT MANAGER;
GRANT CONNECT TO COMMUNITIES;
GRANT CONNECT TO COMMENT;
GRANT SELECT TO COMMUNITIES;
GRANT SELECT,INSERT,DELETE,UPDATE ON COMMENT;

CREATE ROLE COMMUNITY CREATOR;
GRANT CONNECT TO COMMUNITIES;
GRANT INSERT,UPDATE ON COMMUNITIES;

CREATE ROLE COMMUNITY MANAGER
GRANT CONNECT TO COMMUNITIES;
GRANT SELECT,INSERT,DELETE,UPDATE ON COMMUNITIES;

CREATE ROLE COMMUNITY USER;
GRANT CONNECT TO COMMUNITIES;
GRANT SELECT TO COMMUNITIES;

CREATE ROLE CREDENTIAL MANAGER;
GRANT CONNECT TO CREDENTIALS;
GRANT SELECT,INSERT,DELETE,UPDATE ON CREDENTIALS;

CREATE ROLE MESSAGE RECEIVER;
GRANT CONNECT TO MESSAGES;
GRANT SELECT ON MESSAGES;

CREATE ROLE OBJECT CREATOR;
GRANT CONNECT TO COMMUNITIES_PENDING_JOININGS;
GRANT CONNECT TO OBJECTS;
GRANT SELECT,UPDATE,INSERT ON OBJECTS;

CREATE ROLE OBJECT MANAGER;
GRANT CONNECT TO OBJECTS;
GRANT SELECT,INSERT,DELETE,UPDATE ON OBJECTS;

CREATE ROLE SKILL MANAGER;
GRANT CONNECT TO SKILLS;
GRANT SELECT,INSERT,DELETE,UPDATE ON SKILLS;

CREATE ROLE USER MANAGER;
GRANT CONNECT TO USERS;
GRANT SELECT,INSERT,DELETE,UPDATE ON USERS;
