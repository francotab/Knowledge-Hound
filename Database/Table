CREATE TABLESPACE ts_Knowledge-Hound DATAFILE
'G:/tablespace/Knowledge-Hound.dbf' SIZE 33MB

CREATE INDEX COMUNITA_IDX ON COMMUNITIES (Nome)
STORAGE(INITIAL 400K MINEXTENS 1 MAXEXTENS 5 PCTINCREASE 0);

CREATE INDEX USERS_IDX ON USERS(Cognome)
STORAGE(INITIAL 300K MINEXTENS 1 MAXEXTENS 5 PCTINCREASE 0);

CREATE INDEX NEWS_IDX ON NEWS(Titolo)
STORAGE(INITIAL 500K MINEXTENS 1 MAXEXTENS 5 PCTINCREASE 0);
