--Tabelle Roberto: Commenti,Comunità,Iscrizioni comunità,Credenziali

CREATE TABLE COMMENTS (
ID NUMBER (5),
AUTORE VARCHAR (25) UNIQUE NOT NULL,
OGGETTO NUMBER (5) UNIQUE NOT NULL,
TESTO VARCHAR (100) NOT NULL,
DATA_INVIO DATE NOT NULL,
CONTENUTO VARCHAR (10),
CONSTRAINT PK.COMMENTS PRIMARY KEY (ID)
) STORAGE (INITIAL 1521K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE COMMUNITIES (
ID NUMBER (5),
UTENTE VARCHAR (25) NOT NULL,
NOME VARCHAR (20) UNIQUE NOT NULL,
DATA_CREAZIONE DATE NOT NULL,
APERTA BOOLEAN,
TAGS VARCHAR (100),
CONSTRAINT PK.COMMUNITIES PRIMARY KEY (ID)
) STORAGE (INITIAL 691K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE COMMUNITIES_PENDING_JOININGS
UTENTE VARCHAR (25) NOT NULL,
COMUNITÀ NUMBER (5) NOT NULL
DATA_RICHIESTA DATE NOT NULL,
CONSTRAINT PK.COMMUNITIES_PENDING_JOININGS (UTENTE,COMUNITÀ)
) STORAGE (INITIAL 391K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE CREDENTIALS (
COMUNITÀ NUMBER (5) NOT NULL,
NOME VARCHAR (15) NOT NULL,
AUTORIZZAZIONE_GEST_SKILL BOOLEAN NOT NULL,
AUTORIZZAZIONE_GEST_OGG BOOLEAN NOT NULL,
AUTORIZZAZIONE_GEST_UT BOOLEAN NOT NULL,
AUTORIZZAZIONE_RIMOZ_COMMENT BOOLEAN NOT NULL,
AUTORIZZAZIONE_GEST_GRUPP BOOLEAN NOT NULL,
CREDENZ_DEFAULT BOOLEAN NOT NULL,
CONSTRAINT PK.CREDENTIALS PRIMARY KEY (COMUNITÀ,NOME)
) STORAGE (INITIAL 321K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

--Tabelle Nando: Messaggi,News,Oggetti,Visibilità oggetti

CREATE TABLE MESSAGES (
ID NUMBER (5),
UTENTE VARCHAR (25) NOT NULL,
RICEVENTE VARCHAR (25) NOT NULL,
DATA_INVIO DATE,
LETTURA BOOLEAN,
OGGETTO VARCHAR (20),
TESTO VARCHAR (500),
CONSTRAINT PK.MESSAGES PRIMARY KEY (ID)
) STORAGE (INITIAL 5886K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE NEWS (
ID NUMBER (5),
COMUNITÀ NUMBER (5) NOT NULL,
TITOLO VARCHAR (20) NOT NULL,
MESSAGGIO VARCHAR (500) NOT NULL,
TIPO VARCHAR (20) NOT NULL,
DATA_GENERAZIONE DATE NOT NULL,
CONSTRAINT PK.NEWS PRIMARY KEY (ID)
) STORAGE (INITIAL 5665K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE OBJECTS (
ID NUMER (5),
NOME VARCHAR (50) UNIQUE NOT NULL,
DESCRIZIONE VARCHAR (500) NOT NULL,
DATA_CREAZ DATE NOT NULL,
RICEVITORE CHAR (25) UNIQUE NOT NULL,
CREATORE VARCHAR (25) NOT NULL,
NUM_DOWNLOAD NUMBER (7) NOT NULL,
URLS VARCHAR (100) NOT NULL,
TAGS VARCHAR (50),
CONSTRAINT PK.OBJECTS PRIMARY KEY (ID)
) STORAGE (INITIAL 7586K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE OBJECTS_VISIBILIY (
COMUNITÀ NUMBER (5) NOT NULL,
NOME VARCHAR (15) NOT NULL,
OGGETTO NUMBER (5) NOT NULL,
CONSTRAINT PK.OBJECTS_VISIBILITY PRIMARY KEY (COMUNITÀ,NOME,OGGETTO)
) STORAGE (INITIAL 285K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

--Tabelle Franco: Skills,Requisiti skills,Visibilità skills,Tracciamento utente

CREATE TABLE SKILLS (
ID NUMBER (5),
NOME VARCHAR (50) UNIQUE NOT NULL,
DESCRIZIONE VARCHAR (80) NOT NULL,
DATACREAZIONE DATE NOT NULL,
COMUNITÀ NUMBER (5) UNIQUE NOT NULL,
TAGS VARCHAR (20),
CONSTRAINT PK.SKILLS PRIMARY KEY (ID)
) STORAGE (INITIAL 1191K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE SKILLS_REQUISITES (
ID NUMBER (5),
CREDENZIALE_COMM NUMBER (5) NOT NULL,
CREDENZIALE_NOME VARCHAR (15) NOT NULL,
SKILLS NUMBER (5) NOT NULL,
CONSTRAINT PK.SKILLS_REQUISITIES PRIMARY KEY (CREDENZIALE_COMM,CREDENZIALE_NOME,ID)
) STORAGE (INITIAL 496K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE SKILLS_VISIBILITY (
ID NUMBER (5),
CREDENZIALE_COMM NUMBER (5) NOT NULL,
CREDENZIALE_NOME VARCHAR (15) NOT NULL,
SKILLS NUMBER (5) NOT NULL,
CONSTRAINT PK.SKILLS_REQUISITIES PRIMARY KEY (CREDENZIALE_COMM,CREDENZIALE_NOME,ID)
) STORAGE (INITIAL 496K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE TRACKINGS (
LATITUDINE NUMBER (5) NOT NULL,
LONGITUDINE NUMBER (5) NOT NULL,
DATA_REGISTRAZIONE DATE NOT NULL,
USER VARCHAR (25) NOT NULL,
CONSTRAINT PK.TRACKINGS PRIMARY KEY (USER,DATA_REGISTRAZIONE)
) STORAGE (INITIAL 356K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

--Tabelle Davide: Utenti,Associazione utente-comunità,Utenti bannati,Relazioni d'amicizia utenti

CREATE TABLE USERS (
MAIL VARCHAR (25),
NICKNAME VARCHAR (15) UNIQUE NOT NULL,
PASSWORD VARCHAR (15) NOT NULL,
NOME VARCHAR (15) NOT NULL
COGNOME VARCHAR (15) NOT NULL,
ONLINE BOOLEAN NOT NULL,
TRACKING BOOLEAN NOT NULL,
DATA_REGISTRAZIONE DATE NOT NULL,
DATA_NASCITA DATE,
DATA_ULTIMA_CONN DATE,
PAESE VARCHAR (10),
CITTÀ VARCHAR (10),
INDIRIZZO VARCHAR (20),
CIVICO NUMBER (4),
CONSTRAINT PK.USERS PRIMARY KEY (MAIL)
) STORAGE (INITIAL 1496K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE USERS_COMMUNITIES (
USER VARCHAR (25) NOT NULL,
COMUNITÀ NUMBER (5) NOT NULL,
NOME VARCHAR (15) NOT NULL,
DATA_PARTECIPAZIONE_COMM DATE NOT NULL,
STATO_COM_PARTECIPAZIONE BOOLEAN NOT NULL,
STATO_COM_DISISCRIZIONE BOOLEAN NOT NULL,
STATO_SKILL_GUADAGNO BOOLEAN NOT NULL,
STATO_SKILL_CREAZIONE BOOLEAN NOT NULL,
STATO_OGG_CREAZIONE BOOLEAN NOT NULL,
STATO_OGG_CANCELLAZIONE BOOLEAN NOT NULL,
STATO_NUOVO_COMMENTO BOOLEAN NOT NULL,
STATO_NUOVA_NEWS BOOLEAN NOT NULL,
CONSTRAINT PK.USERS_COMMUNITIES PRIMARY KEY (USER,COMUNITÀ)
) STORAGE (INITIAL 646K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE USERS_COMMUNITIES_BLACKLIST (
USER VARCHAR (25) NOT NULL,
COMUNITÀ NUMBER (5) NOT NULL,
DATA_BLACKLISTING DATE NOT NULL,
DATA_RIMOZIONE DATE NOT NULL,
CAUSA VARCHAR (50),
CONSTRAINT PK.USERS_COMMUNITIES_BLACKLIST (USER,COMUNITÀ)
) STORAGE (INITIAL 886K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE USERS_CONNECTIONS (
AMICO1 VARCHAR (25) NOT NULL,
AMICO2 VARCHAR (25) NOT NULL,
DATA_AMICIZIA DATE NOT NULL,
CONSTRAINT PK.USERS_CONNECTIONS PRIMARY KEY (AMICO1,AMICO2)
) STORAGE (INITIAL 481K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

--Tabelle Simone: Richieste d'amicizia pendenti,Skills utenti,Valutazioni

CREATE TABLE USERS_PENDING_CONNECTIONS (
MITTENTE VARCHAR (25) NOT NULL,
RICEVENTE VARCHAR (25) NOT NULL,
DATA_RICHIESTA DATE NOT NULL,
CONSTRAINT PK.USER_PENDING_CONNECTIONS (MITTENTE,RICEVENTE)
) STORAGE (INITIAL 571K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE USERS_SKILLS (
PROPRIETARIO VARCHAR (25) NOT NULL,
SKILL NUMBER (5) NOT NULL,
DATA_ACQUISIZIONE DATE NOT NULL,
NOTE VARCHAR (50),
CONSTRAINT PK.USERS_SKILLS PRIMARY KEY (MITTENTE,RICEVENTE)
) STORAGE (INITIAL 871K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);

CREATE TABLE VALUATIONS (
AUTORE VARCHAR (25) NOT NULL,
OGGETTO NUMBER (5) NOT NULL,
DATA_VALUTAZIONE DATE NOT NULL,
RISULTATO NUMBER (4) NOT NULL,
CONSTRAINT PK.VALUATIONS PRIMARY KEY (AUTORE,OGGETTO)
) STORAGE (INITIAL 411K MINEXTENTS 1 MAXEXTENTS 5 PCTINCREASE 0);
